{% extends 'base.html.twig' %}
{% set active_page = 'art' %}
{% block nav %}
{% include 'partials/navbar.html.twig' %}
{% endblock %}

{% block content %}
    <div class="uk-text-center"><h1>{{ 'art'|upper }}</h1></div>
            <ul class="uk-flex-center uk-subnav uk-subnav-pill uk-subnav-line">
                <li data-uk-filter=""><a>All</a></li>
                <li data-uk-filter="filter-a"><a>Collage</a></li>
                <li data-uk-filter="filter-b"><a>Oil on canvas</a></li>
            </ul>

    <div class="column">
        {% for image in images %}
            <div class="item uk-text-center">
                <a href="#modal{{ image.id }}" data-uk-modal><img class="filter-{{ image.filter }}"src={{ image.path|raw }}>{{ image.name }}</a>
            </div>
            <div id="modal{{ image.id }}" class="uk-modal">
                <div class="uk-modal-dialog">
                    <a class="uk-modal-close uk-close"></a>
                    {{ image.name|capitalize }}<br>
                    {{ image.description }}<br>
                    {{ image.medium|capitalize }}<br>
                    {{ image.height }} x
                    {{ image.width }} inches
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
{% block javascript %}
    <script src="{{ asset('js/custom.js') }}"></script>
{% endblock %}
