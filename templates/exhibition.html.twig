{% extends 'base.html.twig' %}
{% set active_page = 'exhibitions' %}
{% block nav %}
    {% include 'partials/navbar.html.twig' %}
{% endblock %}
{% block content %}

        <div class="uk-margin uk-width-1-1 uk-text-center"><h1>{{ 'exhibitions'|upper }}</h1></div>
    <ul class="uk-flex-center uk-subnav uk-subnav-pill uk-subnav-line">
        <li class="uk-active"><a href="/exhibitions">All</a></li>
        <li><a href="/exhibitions-solo">Solo</a></li>
        <li><a href="#">Group</a></li>
    </ul>
    <div class="uk-grid uk-text-center">
    {% for ex in exhibitions %}

        <div class="uk-width-medium-1-3 uk-width-small-1-1">
            <dl class="uk-description-list-line">
                <dt>{{ ex.year }}</dt>
                <dd>{{ ex.name|capitalize }}</dd>
                <dd>{{ ex.location|title }}</dd>
                <hr>
            </dl>

        </div>

        {% endfor %}
    </div>
{% endblock %}