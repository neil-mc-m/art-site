{% extends 'base.html.twig' %}
{% set active_page = 'exhibitions' %}
{% set active_tab = 'exhibitions-group' %}
{% set heading = 'exhibitions' %}
{% block nav %}
    {% include 'partials/navbar.html.twig' %}
{% endblock %}

{% block content %}
    {% include 'partials/heading.html.twig' %}
    {% include 'partials/subnav.html.twig' %}
    <div class="uk-grid uk-text-center">
        {% for ex in group %}

            <div class="uk-width-medium-1-3 uk-width-small-1-1">
                <dl class="uk-description-list-line">
                    <dt>{{ ex.year }}</dt>
                    <dd>{{ ex.name|capitalize }}</dd>
                    <dd>{{ ex.location|title }}</dd>
                    <hr>
                </dl>

            </div>

        {% endfor %}
    </div>
{% endblock %}